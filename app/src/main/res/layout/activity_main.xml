<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#9b9b9b"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="10"
            android:weightSum="100">
            <!-- отображение знака операции -->
            <TextView android:id="@+id/operationSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingTop="13dp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textSize="40sp"
                android:background="#c6c6cd"
                android:textColor="#484ec9"
                android:text="+"/>
            <TextView android:id="@+id/resultSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textSize="40sp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:background="#c6c6cd"
                android:textColor="#000796"
                android:text="="/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="90"
            android:weightSum="100">
            <!-- строка с первым числом -->
            <TextView android:id="@+id/firstNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5sp"
                android:layout_weight="30"
                android:textAlignment="gravity"
                android:gravity="center_vertical|end"
                android:background="#c6c6cd"
                android:textColor="#484ec9"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:text="555"/>
            <!-- строка со вторым числом -->
            <TextView android:id="@+id/secondNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5sp"
                android:layout_weight="30"
                android:textAlignment="gravity"
                android:gravity="center_vertical|end"
                android:background="#c6c6cd"
                android:textColor="#484ec9"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:text="222"/>
            <!-- результат мат. операции -->
            <TextView android:id="@+id/resultNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5sp"
                android:layout_weight="40"
                android:textAlignment="gravity"
                android:gravity="center_vertical|end"
                android:background="#c6c6cd"
                android:textColor="#000796"
                android:textStyle="bold"
                android:textSize="26sp"
                android:fontFamily="sans-serif"
                android:text="777"/>
        </LinearLayout>
    </LinearLayout>
    <!-- GridLayout и TableLayout не заполняют кнопками всю ширину экрана
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:columnCount="3"
            android:orientation="horizontal"
            android:layout_weight="100">

            <Button
                android:id="@+id/Button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="0dp"
                 android:text="1" />

            <Button
                android:id="@+id/Button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="2" />

            <Button
                android:id="@+id/Button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="0dp"
                android:layout_row="0"
                android:text="3"
               />

            <Button
                android:id="@+id/Button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="0dp"
                android:layout_row="1"
                android:text="4" />

            <Button
                android:id="@+id/Button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="0dp"
                android:layout_row="1"
                android:text="5" />

            <Button
                android:id="@+id/Button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="0dp"
                android:layout_row="1"
                android:text="6" />
        </GridLayout >  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="100"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="20"
            android:weightSum="100">
            <Button
                android:id="@+id/buttonC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="C" />
            <Button
                android:id="@+id/buttonResult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="=" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="20"
            android:weightSum="100">
            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="7"/>
            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="8"/>
            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="9"/>
            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="/"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="20"
            android:weightSum="100">
            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="4" />
            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="5"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="6"/>
            <Button
                android:id="@+id/buttonMultiplication"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="20"
            android:weightSum="100">
            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="1" />
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="2"/>
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="3"/>
            <Button
                android:id="@+id/buttonSubtraction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="-" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="20"
            android:weightSum="100">
            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:text="0"/>
            <Button
                android:id="@+id/buttonComma"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:text=","/>
            <Button
                android:id="@+id/buttonChangeSign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:text="+/-"/>
            <Button
                android:id="@+id/buttonAdditional"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:text="+"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>